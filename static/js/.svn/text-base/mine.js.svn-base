$(".QRcode-share-con .share-btn").click(function () {
    $(".share-pop-dialog").show();
    $(".share-pop-dialog").animate({
        bottom: "0px"
    });
    $(".mask-bg").show();
});

$(".share-pop-dialog .cancel-btn").click(function () {
    $(".share-pop-dialog").animate({
        bottom: "-"+ 6 * document.documentElement.style.fontSize.split("px")[0] + 'px'
    });
    $(".mask-bg").hide();
});